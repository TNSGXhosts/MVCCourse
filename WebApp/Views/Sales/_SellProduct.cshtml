@model Product

@if(Model != null)
{
    <form method="post" asp-controller="sales">
        <input type="hidden" asp-for="ProductId" />

        
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Name" class="form-control" readonly/>
            </div>
            <div class="col">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Price" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" value="@(string.Format("{0:c}", @Model.Price))" class="form-control" min="0" step="any" readonly/>
            </div>
            <div class="col">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
        </div>

    </form>
}